

/* Header */
.header {
  margin-bottom: 56rpx;
}

.h1 {
  font-size: 52rpx;
  font-weight: 700;
  margin-bottom: 12rpx;
  display: block;
}

.p {
  font-size: 28rpx;
  color: var(--text-secondary);
  display: block;
}

/* Section */
.section {
  margin-bottom: 48rpx;
}

.section-title {
  display: flex;
  align-items: center;
  gap: 16rpx;
  font-size: 26rpx;
  font-weight: 600;
  color: var(--text-muted);
  text-transform: uppercase;
  letter-spacing: 1rpx;
  margin-bottom: 24rpx;
  padding-left: 8rpx;
}

.section-title .icon {
  margin-right: 8rpx;
}

/* Card */
.card {
  background: var(--bg-card);
  border-radius: var(--radius-lg);
  border: 2rpx solid var(--border-color);
  box-shadow: var(--shadow-card);
  backdrop-filter: blur(20rpx);
  overflow: hidden;
}

/* Menu Item */
.menu-item {
  display: flex;
  align-items: center;
  padding: 32rpx;
  border-bottom: 2rpx solid var(--border-color);
  transition: var(--transition);
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item:active {
  background: rgba(255, 255, 255, 0.05);
}

.menu-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: var(--radius-sm);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 28rpx;
  flex-shrink: 0;
}

.menu-icon.blue { background: rgba(59, 130, 246, 0.15); color: var(--accent-blue); }
.menu-icon.green { background: rgba(16, 185, 129, 0.15); color: var(--accent-green); }
.menu-icon.orange { background: rgba(255, 166, 0, 0.15); color: var(--accent-orange); }
.menu-icon.amber { background: rgba(245, 158, 11, 0.15); color: var(--accent-amber); }
.menu-icon.red { background: rgba(239, 68, 68, 0.15); color: var(--accent-red); }

.menu-content {
  flex: 1;
  min-width: 0;
}

.menu-content .title {
  font-size: 30rpx;
  font-weight: 500;
  color: var(--text-primary);
  margin-bottom: 4rpx;
}

.menu-content .desc {
  font-size: 26rpx;
  color: var(--text-muted);
}

.menu-arrow {
  color: var(--text-muted);
  flex-shrink: 0;
}

.menu-value {
  font-size: 28rpx;
  color: var(--text-secondary);
  margin-right: 16rpx;
  font-family: 'SF Mono', Consolas, monospace;
}

/* Info List */
.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 28rpx 32rpx;
  border-bottom: 2rpx solid var(--border-color);
}

.info-item:last-child {
  border-bottom: none;
}

.info-item .label {
  font-size: 28rpx;
  color: var(--text-secondary);
}

.info-item .value {
  font-size: 28rpx;
  color: var(--text-primary);
  font-weight: 500;
}

.tag {
  display: inline-block;
  padding: 8rpx 20rpx;
  border-radius: 12rpx;
  font-size: 26rpx;
  font-weight: 500;
}

.tag.blue { background: rgba(59, 130, 246, 0.15); color: var(--accent-blue); }
.tag.green { background: rgba(16, 185, 129, 0.15); color: var(--accent-green); }

/* Warning Box */
.warning-box {
  display: flex;
  align-items: flex-start;
  gap: 24rpx;
  padding: 28rpx 32rpx;
  background: rgba(245, 158, 11, 0.08);
  border-bottom: 2rpx solid var(--border-color);
}

.warning-box .icon {
  color: var(--accent-amber);
  flex-shrink: 0;
  margin-top: 4rpx;
}

.warning-box .p {
  font-size: 26rpx;
  color: var(--text-secondary);
  line-height: 1.6;
}

/* Danger Zone */
.danger-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx;
}

.danger-info {
  display: flex;
  align-items: center;
  gap: 24rpx;
  padding: 0;
}

.danger-info .icon {
  color: var(--accent-red);
}

.danger-info .text .title {
  font-size: 30rpx;
  font-weight: 500;
  color: var(--text-primary);
}

.danger-info .text .desc {
  font-size: 26rpx;
  color: var(--text-muted);
}

.btn-danger {
  padding: 16rpx 32rpx;
  background: rgba(239, 68, 68, 0.15);
  color: var(--accent-red);
  border: 2rpx solid rgba(239, 68, 68, 0.3);
  border-radius: var(--radius-sm);
  font-size: 28rpx;
  font-weight: 500;
  margin: 0;
  line-height: 1.5;
}

.btn-danger:active {
  background: rgba(239, 68, 68, 0.25);
}

/* Footer */
.footer {
  text-align: center;
  margin-top: 64rpx;
  padding: 32rpx;
}

.footer text {
  font-size: 24rpx;
  color: var(--text-muted);
}
