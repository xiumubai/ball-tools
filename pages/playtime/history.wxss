page {
  --bg-primary: #0f1419;
  --bg-secondary: #1a1f2e;
  --bg-card: #1e2533;
  --bg-hover: #252d3d;
  --border-color: rgba(255, 255, 255, 0.08);
  --text-primary: #ffffff;
  --text-secondary: rgba(255, 255, 255, 0.6);
  --text-muted: rgba(255, 255, 255, 0.4);
  --accent-blue: #3b82f6;
  --accent-green: #10b981;
  --accent-purple: #8b5cf6;
  --accent-orange: #f59e0b;
  --radius-sm: 16rpx;
  --radius-md: 24rpx;
  --radius-lg: 32rpx;
  --shadow-card: 0 8rpx 32rpx rgba(0, 0, 0, 0.2);
  --transition: all 0.2s ease;

  background: linear-gradient(145deg, var(--bg-primary) 0%, #0a0d12 100%);
  min-height: 100vh;
  color: var(--text-primary);
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
  box-sizing: border-box;
}

/* Header */
.header {
  margin-bottom: 48rpx;
  flex-shrink: 0;
}

.header-top {
  display: flex;
  align-items: center;
  gap: 24rpx;
  margin-bottom: 16rpx;
}

.h1 {
  font-size: 44rpx;
  font-weight: 600;
  color: var(--text-primary);
}

.p {
  color: var(--text-secondary);
  font-size: 28rpx;
  margin-left: 0; 
}

/* Stats Grid */
.stats-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
  margin-bottom: 48rpx;
  flex-shrink: 0;
}

.stat-card {
  background: var(--bg-card);
  border: 2rpx solid var(--border-color);
  border-radius: var(--radius-md);
  padding: 40rpx 32rpx;
  text-align: center;
  position: relative;
  overflow: hidden;
}

.stat-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 6rpx;
}

.stat-card.duration::before {
  background: linear-gradient(90deg, var(--accent-blue), var(--accent-purple));
}

.stat-card.count::before {
  background: linear-gradient(90deg, var(--accent-green), var(--accent-blue));
}

.stat-icon {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 80rpx;
  height: 80rpx;
  margin: 0 auto 24rpx;
  border-radius: 50%;
}

.stat-card.duration .stat-icon {
  background: rgba(59, 130, 246, 0.15);
  color: var(--accent-blue);
}

.stat-card.count .stat-icon {
  background: rgba(16, 185, 129, 0.15);
  color: var(--accent-green);
}

.stat-value {
  font-size: 48rpx;
  font-weight: 700;
  font-family: 'SF Mono', 'Consolas', monospace;
  margin-bottom: 8rpx;
}

.stat-card.duration .stat-value { color: var(--accent-blue); }
.stat-card.count .stat-value { color: var(--accent-green); }

.stat-label {
  font-size: 26rpx;
  color: var(--text-secondary);
}

/* Records Section */
.records-section {
  background: var(--bg-secondary);
  border: 2rpx solid var(--border-color);
  border-radius: var(--radius-lg);
  overflow: hidden;
  display: flex;
  flex-direction: column;
  flex: 1;
  min-height: 0;
}

.section-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx 40rpx;
  border-bottom: 2rpx solid var(--border-color);
  background: var(--bg-secondary);
  flex-shrink: 0;
}

.section-title {
  display: flex;
  align-items: center;
  gap: 20rpx;
  font-size: 30rpx;
  font-weight: 500;
}

.section-title .icon {
  color: var(--accent-purple);
}

.filter-btn {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 12rpx 24rpx;
  background: var(--bg-card);
  border: 2rpx solid var(--border-color);
  border-radius: var(--radius-sm);
  color: var(--text-secondary);
  font-size: 26rpx;
}

.filter-btn:active {
  background: var(--bg-hover);
  color: var(--text-primary);
}

.records-scroll {
  flex: 1;
  height: 100%;
  overflow-y: auto;
}

/* Date Group */
.date-group {
  border-bottom: 2rpx solid var(--border-color);
}

.date-group:last-child {
  border-bottom: none;
}

.date-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 28rpx 40rpx;
  background: var(--bg-card);
  transition: background 0.2s ease;
}

.date-header:active {
  background: var(--bg-hover);
}

.date-info {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.date-icon {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 64rpx;
  height: 64rpx;
  background: rgba(139, 92, 246, 0.15);
  border-radius: var(--radius-sm);
  color: var(--accent-purple);
}

.date-text {
  font-size: 30rpx;
  font-weight: 500;
  color: var(--text-primary);
}

.date-summary {
  display: flex;
  align-items: center;
  gap: 32rpx;
}

.summary-item {
  display: flex;
  align-items: center;
  gap: 12rpx;
  font-size: 26rpx;
  color: var(--text-secondary);
}

.summary-item.sessions { color: var(--accent-green); }
.summary-item.time { color: var(--accent-blue); }

.expand-icon {
  color: var(--text-muted);
}

/* Sessions List */
.sessions-list {
  padding: 16rpx 24rpx;
  background: var(--bg-secondary);
}

.session-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 32rpx;
  margin: 8rpx 0;
  background: var(--bg-card);
  border-radius: var(--radius-sm);
}

.session-item:active {
  background: var(--bg-hover);
}

.session-time {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.time-dot {
  width: 16rpx;
  height: 16rpx;
  background: var(--accent-orange);
  border-radius: 50%;
  box-shadow: 0 0 16rpx rgba(245, 158, 11, 0.4);
}

.time-range {
  font-size: 28rpx;
  color: var(--text-secondary);
  font-family: 'SF Mono', 'Consolas', monospace;
}

.session-duration {
  font-size: 28rpx;
  font-weight: 600;
  font-family: 'SF Mono', 'Consolas', monospace;
  color: var(--accent-blue);
  background: rgba(59, 130, 246, 0.1);
  padding: 8rpx 20rpx;
  border-radius: 40rpx;
}

/* Empty State */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 40rpx;
  color: var(--text-muted);
}

.empty-state .icon {
  margin-bottom: 32rpx;
  opacity: 0.5;
}

.empty-state text {
  font-size: 28rpx;
}
