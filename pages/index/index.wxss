.header{padding:32rpx 32rpx 16rpx}
.title{font-size:48rpx;font-weight:900;color:#eaeef2}
.subtitle{margin-top:8rpx;font-size:30rpx;color:#9aa5af}
.card{position:relative;overflow:hidden;margin:24rpx 32rpx;padding:24rpx;border-radius:20rpx;background:#12171d;border:2rpx solid #1c232b;box-shadow:0 8rpx 24rpx rgba(0,0,0,.28)}
.card-header{display:flex;align-items:center;gap:12rpx;margin-bottom:8rpx}
.icon-bolt{color:#F59E0B}
.bolt{width:28rpx;height:28rpx;border-radius:6rpx;background:linear-gradient(135deg,#F59E0B,#F97316)}
.card-title{font-size:36rpx;color:#cdd6dd;font-weight:600}
.card-desc{font-size:30rpx;color:#9aa5af;margin-bottom:24rpx}
.card .corner{position:absolute;top:-24rpx;right:-24rpx;width:200rpx;height:200rpx;border-radius:50%;background:rgba(245,158,11,.20)}
.mode-list{display:flex;flex-direction:column;gap:12rpx}
.mode-btn{display:flex;align-items:center;justify-content:space-between;padding:32rpx;border-radius:16rpx;border:2rpx solid #1c232b;color:#fff;box-shadow:0 8rpx 16rpx rgba(0,0,0,.30)}
.mode-content { display: flex; align-items: center; gap: 12rpx; }
.mode-btn .badge{width:48rpx;height:48rpx;border-radius:50%;display:flex;align-items:center;justify-content:center;font-weight:700;color:#fff;font-size:32rpx;box-shadow: inset 0 6rpx 12rpx rgba(255,255,255,.18), inset 0 -10rpx 18rpx rgba(0,0,0,.28), 0 10rpx 18rpx rgba(0,0,0,.40); }
.mode-btn .mode-text{font-size:36rpx;color:#fff}
.arrow{margin-left:auto;color:#fff;opacity:.6}
.mode-btn.green{background:linear-gradient(90deg,#2BA471,#7AE3B1);box-shadow:0 16rpx 24rpx rgba(46,184,115,.20)}
.mode-btn.green .badge{background:radial-gradient(circle at 30% 30%, #7AE3B1 0%, #2BA471 60%, #14865A 100%)}
.mode-btn.green-hover{background:linear-gradient(90deg,#2BA471,#60e2b4)}

.mode-btn.orange{background:linear-gradient(90deg,#F59E0B,#F97316);box-shadow:0 16rpx 24rpx rgba(245,158,11,.18)}
.mode-btn.orange .badge{background:radial-gradient(circle at 30% 30%, #FCD34D 0%, #F59E0B 60%, #C2410C 100%)}
.mode-btn.orange-hover{background:linear-gradient(90deg,#F59E0B,#FB923C)}

.section{margin:12rpx 32rpx}
.section-title{font-size:28rpx;color:#cdd6dd;margin-bottom:12rpx;font-weight:700;opacity:.8}
.features{display:grid;grid-template-columns:1fr 1fr;gap:12rpx}
.feature-card{padding:20rpx;border-radius:16rpx;background:rgba(18,23,29,.9);border:2rpx solid #1c232b;box-shadow:0 6rpx 16rpx rgba(0,0,0,.24);transition:background .2s ease}
.feature-hover{background:rgba(18,23,29,.95)}
.feat-content { display:  flex; align-items: center; gap: 12rpx; }
.feat-title{font-size:32rpx;color:#eaeef2;font-weight:700}
.feat-desc{margin-top:6rpx;font-size:28rpx;color:#9aa5af}
.notice{margin:24rpx 32rpx;padding:16rpx;border-radius:16rpx;display:flex;gap:12rpx;align-items:flex-start;background:rgba(255,255,255,.04);border:2rpx solid #1c232b}
.dot{width:12rpx;height:12rpx;border-radius:50%;background:#2eb873;margin-top:8rpx}
.notice-text{font-size:28rpx;color:#9aa5af;line-height:1.6}
