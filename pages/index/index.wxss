/* Header */
.header {
  margin-bottom: 48rpx;
  padding-top: 48rpx;
}

.h1 {
  font-size: 48rpx;
  font-weight: 700;
  color: var(--text-white);
  margin-bottom: 8rpx;
}

.p {
  font-size: 28rpx;
  color: var(--text-light-gray);
  line-height: 1.4;
}

/* Cards */
.card {
  background: var(--card-bg);
  border-radius: var(--radius-card);
  padding: 40rpx;
  margin-bottom: 32rpx;
  position: relative;
  overflow: hidden;
  box-shadow: 0 8rpx 40rpx rgba(0, 0, 0, 0.2);
}

/* Golden highlight effect */
.card::after {
  content: '';
  position: absolute;
  top: -40rpx;
  right: -40rpx;
  width: 200rpx;
  height: 200rpx;
  background: radial-gradient(circle, rgba(245, 158, 11, 0.15) 0%, transparent 70%);
  border-radius: 50%;
  pointer-events: none;
}

.card-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-white);
  margin-bottom: 8rpx;
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.card-desc {
  font-size: 26rpx;
  color: var(--text-gray);
  margin-bottom: 32rpx;
}

/* Inner Band */
.inner-band {
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-radius: 24rpx;
  padding: 16rpx 16rpx 16rpx 32rpx;
  height: 112rpx;
  position: relative;
  overflow: hidden;
}

.band-green {
  background: linear-gradient(90deg, rgba(28, 200, 138, 0.15) 0%, rgba(92, 225, 185, 0.05) 100%);
  border: 2rpx solid rgba(28, 200, 138, 0.2);
}

.band-orange {
  background: linear-gradient(90deg, rgba(255, 154, 61, 0.15) 0%, rgba(255, 179, 92, 0.05) 100%);
  border: 2rpx solid rgba(255, 154, 61, 0.2);
}

/* Badge */
.badge-8 {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, var(--badge-green-start) 0%, var(--badge-green-end) 100%);
  color: white;
  font-weight: 700;
  font-size: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 16rpx rgba(13, 186, 116, 0.3);
  margin-right: 24rpx;
}

.band-content {
  flex: 1;
  display: flex;
  align-items: center;
  font-size: 32rpx;
  font-weight: 600;
  color: white;
}

/* Buttons */
.btn-cta {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  padding: 16rpx 32rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  font-weight: 600;
  color: white;
  transition: all 0.2s;
  min-width: 80rpx;
}

.btn-green {
  background: linear-gradient(90deg, var(--accent-green-start) 0%, var(--accent-green-end) 100%);
  box-shadow: 0 4rpx 20rpx rgba(28, 200, 138, 0.3);
}

.btn-orange {
  background: var(--accent-deep-orange);
  box-shadow: 0 4rpx 20rpx rgba(249, 129, 42, 0.3);
}

.timer-text {
  font-family: monospace;
  font-size: 40rpx;
  font-weight: 600;
  color: var(--text-white);
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.timer-icon {
  width: 48rpx;
  height: 48rpx;
  background: linear-gradient(135deg, #FF9A3D 0%, #FFB35C 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(255, 154, 61, 0.3);
}

/* Features Section */
.section-label {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-white);
  margin: 48rpx 0 32rpx;
}

.feature-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 24rpx;
}

.feature-tile {
  background: var(--card-bg);
  border: 2rpx solid rgba(255, 255, 255, 0.05);
  border-radius: var(--radius-tile);
  padding: 32rpx;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.feature-header {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.feature-title {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text-white);
}

.feature-desc {
  font-size: 24rpx;
  color: var(--text-gray);
  line-height: 1.4;
}
