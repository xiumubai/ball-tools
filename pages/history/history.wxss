
.topbar {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 24rpx 32rpx;
  border-bottom: 2rpx solid #eee;
  background: #fff;
}
.rounds {
  font-size: 36rpx;
  font-weight: 600;
  padding: 32rpx;
}
.tabbar { margin-left: auto; display: flex; gap: 12rpx; }
.seg.active { border: 2rpx solid #0052D9; color: #0052D9; }
.text-accent {
  color: #f5c73d;
}
.seg-tabs {
  margin: 0 32rpx 16rpx;
  display: flex;
  align-items: center;
  gap: 12rpx;
  background: rgba(255,255,255,0.06);
  border-radius: 999rpx;
  padding: 8rpx;
}
.seg-item {
  flex: 1;
  text-align: center;
  padding: 16rpx 24rpx;
  border-radius: 999rpx;
  color: #eaeef2;
  font-size: 26rpx;
  font-weight: 600;
}
.seg-item.active {
  background: #2eb873;
  color: #ffffff;
}

.summary {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 16rpx;
  padding: 0 32rpx 16rpx;
}
.summary-card {
  border-radius: 16rpx;
  padding: 24rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}
.summary-value {
  font-size: 40rpx;
  font-weight: 700;
}
.summary-label {
  font-size: 28rpx;
}

.empty { height: 500rpx; color: #fff; display: flex; flex-direction: column; justify-content: center; align-items: center; gap: 32rpx; }

.record {
  padding: 24rpx;
  border-radius: 16rpx;
  margin-bottom: 24rpx;
}
.record-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 16rpx;
}
.time {
  font-size: 28rpx;
  color: #9aa5af;
}
.round {
  font-size: 28rpx;
  color: #9aa5af;
}

.players {
  display: grid;
  grid-template-columns: 1fr auto 1fr;
  align-items: center;
  padding: 16rpx 0;
  gap: 24rpx;
}
.player {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
}
.avatar {
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
  background: #fff;
}
.name {
  font-size: 32rpx;
  color: #eaeef2;
}
.score {
  display: flex;
  align-items: baseline;
  gap: 16rpx;
}
.score-num {
  font-size: 76rpx;
  font-weight: 700;
  color: #eaeef2;
}
.score-num.a { color: #2BA471; }
.score-num.b { color: #0052D9; }
.dash {
  font-size: 60rpx;
  color: #9aa5af;
}

.stats {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 16rpx;
  padding-top: 8rpx;
}
.stats-card {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  padding: 24rpx;
  border-radius: 16rpx;
}
.stats-title {
  font-size: 32rpx;
  color: #eaeef2;
  font-weight: 600;
}
.stats-items {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 16rpx;
}
.stat {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 8rpx 12rpx;
  background: rgba(255,255,255,0.04);
  border-radius: 12rpx;
}
.stat-label {
  font-size: 28rpx;
  color: #9aa5af;
}
.stat-value {
  font-size: 32rpx;
  color: #eaeef2;
  font-weight: 600;
  background: rgba(255,255,255,0.04);
  padding: 4rpx 12rpx;
  border-radius: 24rpx;
}
.zplayers { display: grid; gap: 16rpx; padding: 16rpx 0; }
.zplayers.two { grid-template-columns: repeat(2, 1fr); }
.zplayers.three { grid-template-columns: repeat(3, 1fr); }
.zstats { display: grid; gap: 16rpx; padding-top: 8rpx; }
.zstats.two { grid-template-columns: repeat(2, 1fr); }
.zstats.three { grid-template-columns: repeat(3, 1fr); }
.stats-items.two { grid-template-columns: 1fr 1fr; }
.stats-items.three { grid-template-columns: 1fr; }

.match-row { display:flex; align-items:center; justify-content: space-between; gap:24rpx; padding: 8rpx 0 }
.side { display:flex; flex-direction: column; justify-content: center; align-items:center; gap: 12rpx }
.circle-mini { width: 40rpx; height: 40rpx; border-radius: 999rpx; background: rgba(255,255,255,.06); border: 2rpx solid rgba(255,255,255,.08); color:#9aa5af; display:flex; align-items:center; justify-content:center; font-size: 24rpx; }
.pname { font-size: 26rpx; color: #9aa5af; font-weight: 600; }
.pname-row { display:flex; align-items:center; gap:8rpx }
.score-x { font-size: 64rpx; font-weight: 900; color: #eaeef2 }
.vs { font-size: 26rpx; color: #9aa5af }
.win { color:#2eb873 }

.swipe-right {
  height: 100%;
}
.swipe-right.delete {
  width: 180rpx;
  background: #E34D59;
  color: #ffffff;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
}
