
/* KPI Grid */
.kpi-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20rpx;
  margin-bottom: 48rpx;
}

.kpi-card {
  background: var(--bg-card);
  border: 2rpx solid var(--border-color);
  border-radius: 24rpx;
  padding: 32rpx 16rpx;
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.kpi-value {
  font-size: 36rpx;
  font-weight: 700;
  color: var(--text-primary);
  margin-bottom: 8rpx;
  font-variant-numeric: tabular-nums;
}

.kpi-value.green { color: var(--accent-green); }
.kpi-value.red { color: var(--accent-red); }
.kpi-value.yellow { color: var(--accent-yellow); }

.kpi-label {
  font-size: 22rpx;
  color: var(--text-secondary);
}

/* Tabs */
.tabs {
  display: flex;
  background: var(--bg-card);
  border: 2rpx solid var(--border-color);
  border-radius: 48rpx;
  padding: 8rpx;
  margin-bottom: 48rpx;
}

.tab {
  flex: 1;
  text-align: center;
  padding: 16rpx 0;
  font-size: 28rpx;
  font-weight: 500;
  color: var(--text-secondary);
  border-radius: 40rpx;
  transition: all 0.2s;
}

.tab.active {
  background: linear-gradient(135deg, var(--accent-green) 0%, #059669 100%);
  color: white;
  font-weight: 600;
  box-shadow: 0 4rpx 16rpx rgba(16, 185, 129, 0.3);
}

/* Match List */
.list-container {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.match-card {
  background: var(--bg-card);
  border: 2rpx solid var(--border-color);
  border-radius: 24rpx;
  padding: 32rpx;
  position: relative;
  overflow: hidden;
  transition: all 0.2s;
}

.match-card:active {
  border-color: var(--accent-green);
  transform: translateY(-4rpx);
}

.match-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
}

.badge {
  display: inline-flex;
  align-items: center;
  padding: 8rpx 20rpx;
  border-radius: 24rpx;
  font-size: 24rpx;
  font-weight: 600;
}

.badge.green {
  background: rgba(16, 185, 129, 0.1);
  color: var(--accent-green);
  border: 2rpx solid rgba(16, 185, 129, 0.2);
}

.badge.orange {
  background: rgba(245, 158, 11, 0.1);
  color: var(--accent-orange);
  border: 2rpx solid rgba(245, 158, 11, 0.2);
}

.match-time {
  font-size: 24rpx;
  color: var(--text-secondary);
  margin-left: auto;
  margin-right: 16rpx;
}

.match-divider {
  height: 2rpx;
  background: var(--border-color);
  margin-bottom: 32rpx;
}

.match-body {
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: 24rpx;
}

.player {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  gap: 8rpx;
}

.score {
  font-size: 64rpx;
  font-weight: 800;
  line-height: 1;
  color: var(--text-primary);
  font-variant-numeric: tabular-nums;
}

.player-name {
  font-size: 24rpx;
  color: var(--text-muted);
}

.vs-label {
  flex: 1;
  text-align: center;
  font-size: 60rpx;
  font-style: italic;
  color: var(--text-muted);
  font-weight: 500;
  margin-top: -32rpx;
}

/* Empty State */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80rpx 40rpx;
  color: var(--text-muted);
  font-size: 28rpx;
}

/* Swipe Actions */
.swipe-right {
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.swipe-right.delete {
  width: 144rpx;
  background: var(--accent-red);
  color: white;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  font-size: 24rpx;
}
