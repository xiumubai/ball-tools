page {
  --bg: #0a0f1a;
  --card: #1a2332;
  --card-2: #111827;
  --border: #2a3a50;
  --text: #ffffff;
  --muted: #94a3b8;
  --shadow: 0 8rpx 40rpx rgba(0,0,0,.3);

  --green: #10b981;
  --blue: #3b82f6;
  --orange: #f59e0b;
  --red: #ef4444;
  --chip: #1a2332;
  --chip-border: #2a3a50;
  --focus: #60a5fa;
  --radius: 32rpx;
  
  background: linear-gradient(135deg, var(--bg) 0%, #0f172a 100%);
  color: var(--text);
  font-family: system-ui, -apple-system, "SF Pro Text", "Segoe UI", Roboto, "Helvetica Neue", Arial;
  min-height: 100vh;
  box-sizing: border-box;
}

.app {
  display: flex;
  flex-direction: column;
  gap: 32rpx;
  padding: 40rpx 32rpx 48rpx;
  min-height: 100vh;
  box-sizing: border-box;
}

/* Top bar */
.top {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.game-tag {
  background: rgba(16, 185, 129, 0.15);
  color: var(--green);
  border: 2rpx solid rgba(16, 185, 129, 0.3);
  padding: 12rpx 24rpx;
  border-radius: 999rpx;
  font-weight: 600;
  font-size: 26rpx;
  box-shadow: 0 4rpx 16rpx rgba(16, 185, 129, 0.15);
}

.timer {
  display: flex;
  align-items: center;
  gap: 16rpx;
  background: var(--chip);
  border: 2rpx solid var(--chip-border);
  padding: 16rpx 28rpx;
  border-radius: 999rpx;
  box-shadow: var(--shadow);
}

.time {
  font-weight: 700;
  font-variant-numeric: tabular-nums;
  font-size: 30rpx;
  letter-spacing: 1rpx;
  color: var(--text);
}

.pause-pill {
  padding: 4rpx 16rpx;
  border-radius: 999rpx;
  font-weight: 600;
  font-size: 22rpx;
}

.pause-pill.paused {
  color: var(--red);
  background: rgba(239, 68, 68, 0.15);
  border: 2rpx solid rgba(239, 68, 68, 0.3);
}

.pause-pill.running {
  color: var(--green);
  background: rgba(16, 185, 129, 0.15);
  border: 2rpx solid rgba(16, 185, 129, 0.3);
}

/* Scoreboard */
.panel {
  background: var(--card);
  border: 2rpx solid var(--border);
  border-radius: var(--radius);
  padding: 40rpx;
  box-shadow: var(--shadow);
}

.score-grid {
  display: grid;
  grid-template-columns: 1fr 160rpx 1fr;
  gap: 24rpx;
  align-items: center;
}

.player-card {
  position: relative;
  background: var(--card-2);
  border: 2rpx solid var(--border);
  border-radius: 28rpx;
  padding: 32rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.player-card.active {
  border-color: var(--green);
  box-shadow: 0 0 0 2rpx rgba(16, 185, 129, 0.3);
}

.player-name {
  color: var(--muted);
  font-weight: 600;
  font-size: 26rpx;
  margin-bottom: 8rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  max-width: 100%;
}

.score {
  font-size: 96rpx;
  font-weight: 800;
  line-height: 1;
  text-shadow: 0 4rpx 20rpx rgba(0,0,0,.3);
  color: var(--text);
}

.round-card {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
}

.round-tag {
  font-size: 24rpx;
  color: var(--muted);
  font-weight: 600;
  background: var(--card-2);
  padding: 8rpx 20rpx;
  border-radius: 24rpx;
  border: 2rpx solid var(--border);
  white-space: nowrap;
}

.vs {
  font-size: 28rpx;
  font-weight: 800;
  color: var(--muted);
  font-style: italic;
  opacity: 0.5;
}

.hint {
  margin-top: 24rpx;
  text-align: center;
  color: var(--muted);
  font-size: 24rpx;
  opacity: 0.7;
}

/* Stats blocks */
.stats {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 24rpx;
  margin-top: 24rpx;
}

.stat-card {
  background: var(--card-2);
  border: 2rpx solid var(--border);
  border-radius: 24rpx;
  padding: 24rpx;
}

.stat-title {
  font-weight: 700;
  color: var(--text);
  margin-bottom: 20rpx;
  font-size: 28rpx;
  text-align: center;
}

.stat-grid-inner {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 16rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: var(--card);
  border-radius: 16rpx;
  padding: 16rpx 8rpx;
}

.stat-label {
  font-size: 22rpx;
  color: var(--muted);
  margin-bottom: 4rpx;
}

.stat-val {
  font-size: 30rpx;
  font-weight: 700;
}

.stat-val.green { color: var(--green); }
.stat-val.blue { color: var(--blue); }
.stat-val.orange { color: var(--orange); }
.stat-val.red { color: var(--red); }

/* Primary actions */
.actions {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20rpx;
  margin-top: 32rpx;
}

.btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  padding: 28rpx 0;
  border-radius: 24rpx;
  font-weight: 700;
  font-size: 28rpx;
  border: 2rpx solid transparent;
  box-shadow: var(--shadow);
  color: #fff;
}

.btn.green { background: var(--green); box-shadow: 0 8rpx 24rpx rgba(16, 185, 129, 0.3); }
.btn.blue { background: var(--blue); box-shadow: 0 8rpx 24rpx rgba(59, 130, 246, 0.3); }
.btn.orange { background: var(--orange); box-shadow: 0 8rpx 24rpx rgba(245, 158, 11, 0.3); }
.btn.red-ghost { 
  background: rgba(239, 68, 68, 0.15); 
  border: 2rpx solid rgba(239, 68, 68, 0.3); 
  color: var(--red);
}

/* Bottom bar */
.toolbar {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 24rpx;
  margin-top: auto;
}

.tool {
  background: var(--card);
  border: 2rpx solid var(--border);
  border-radius: 24rpx;
  padding: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  color: var(--text);
  font-weight: 600;
  font-size: 28rpx;
}

.tool.red {
  border-color: rgba(239, 68, 68, 0.3);
  color: var(--red);
  background: rgba(239, 68, 68, 0.1);
}

/* Rename Modal (Preserved Styles) */
.rename-mask {
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.7);
  backdrop-filter: blur(4px);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}
.rename-dialog {
  width: 600rpx;
  background: var(--card);
  border-radius: 32rpx;
  padding: 40rpx;
  border: 2rpx solid var(--border);
  box-shadow: var(--shadow);
}
.rename-title {
  font-size: 32rpx;
  color: var(--text);
  font-weight: 700;
  text-align: center;
  display: block;
  margin-bottom: 32rpx;
}
.rename-input {
  height: 96rpx;
  border: 2rpx solid var(--border);
  background: var(--bg);
  color: var(--text);
  border-radius: 20rpx;
  padding: 0 24rpx;
  font-size: 32rpx;
  margin-bottom: 40rpx;
}
.rename-actions {
  display: flex;
  gap: 24rpx;
}
.rename-btn {
  flex: 1;
  height: 88rpx;
  border-radius: 20rpx;
  font-weight: 600;
  font-size: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.rename-btn.cancel {
  background: transparent;
  border: 2rpx solid var(--border);
  color: var(--text);
}
.rename-btn.ok {
  background: var(--green);
  border: none;
  color: #fff;
}
