.topbar {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  padding: 24rpx 32rpx;
  border-bottom: 2rpx solid #1c232b;
  background: #141a21;
}
.header-title { display:inline-flex; align-items:center; gap:12rpx }
.mode-tag { opacity:.9 }
.round-pill { font-size:28rpx; color:#eaeef2; font-weight:800; padding: 8rpx 16rpx; border-radius:999rpx; background: rgba(255,255,255,.06); border: 2rpx solid rgba(255,255,255,.08) }
.topbar .left { display:flex; align-items:center; gap:12rpx; }
.current-round { font-size:28rpx; color:#cdd6dd; font-weight:700 }
.rounds {
  font-size: 30rpx;
  font-weight: 600;
  color: #cdd6dd;
  flex: 1;
}

.lastop {
  font-size: 28rpx;
  color: #9aa5af;
  margin-left: 32rpx;
  margin-top: 24rpx;
}

.players-scores { display:flex; align-items:center; justify-content:center; gap:24rpx; padding: 24rpx 32rpx }
.select-card { flex:1; padding:24rpx; border-radius:32rpx; position:relative; overflow:hidden; background:rgba(18,23,29,.6); border:2rpx solid rgba(255,255,255,.1); box-shadow:0 12rpx 24rpx rgba(0,0,0,.28) }
.select-card.selected { box-shadow:0 0 0 4rpx rgba(46,184,115,.5),0 12rpx 24rpx rgba(0,0,0,.28); background:rgba(18,23,29,.92) }
.player-name { text-align:center; font-size:28rpx; color:#9aa5af; font-weight:700; margin-bottom:12rpx }
.score-x { text-align:center; font-size:96rpx; font-weight:900; color:#eaeef2 }
.round-pill-container {
  display: flex;
  align-items: center;
  flex-direction: column;
  gap: 12rpx;
  justify-content: center;
}
.vs {
  font-style: italic;
  font-size: 32rpx;
  color: #9aa5af;
  padding: 8rpx 16rpx;
  border-radius: 32rpx;
  background: rgba(255,255,255,.06);
}

.tip {
  padding: 0 32rpx;
  text-align: center;
  color: #9aa5af;
  font-size: 28rpx;
}

.selector {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 16rpx;
  padding: 0 32rpx 16rpx;
}
.seg {
  border: 2rpx solid #ddd;
  background: #fff;
}
.seg.active {
  border-color: #0052D9;
  color: #0052D9;
}

.ops-grid { display:flex; flex-direction:row; flex-wrap:nowrap; gap: 24rpx; align-items:stretch; padding: 32rpx 24rpx }
.op { flex:1; display: flex; align-items: center; justify-content: center; height:88rpx; border-radius:24rpx; font-size:28rpx; font-weight:800; box-sizing:border-box }
.btn-primary { background: linear-gradient(180deg, #2eb873, #239a60); color:#fff; box-shadow: 0 10rpx 16rpx rgba(46,184,115,.28) }
.btn-emerald { background: linear-gradient(180deg, #10b981, #0ea5e9); color:#fff; box-shadow: 0 10rpx 16rpx rgba(16,185,129,.28) }
.btn-amber { background: linear-gradient(180deg, #f59e0b, #f97316); color:#fff; box-shadow: 0 10rpx 16rpx rgba(245,158,11,.28) }
.btn-danger { border:2rpx solid rgba(239,68,68,.5); background: rgba(239,68,68,.12); color:#ef4444 }

.actions { display:flex; flex-direction:row; flex-wrap:nowrap; align-items: center; gap: 20rpx; padding: 0 32rpx;}
.action { flex:1; border:2rpx solid #1c232b; border-radius: 20rpx; background: #000; color:#cdd6dd; display:flex; align-items:center; justify-content:center; gap:16rpx; box-sizing:border-box; padding: 16rpx 0; }
.action.danger { border-color:#ef4444; color:#ef4444 }

.stats {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 16rpx;
  padding: 16rpx 32rpx;
}
.stats-card {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  padding: 24rpx;
  background: rgba(18,23,29,.6);
  border: 2rpx solid rgba(255,255,255,.1);
  border-radius: 16rpx;
  box-shadow: 0 6rpx 14rpx rgba(0,0,0,.28);
}
.stats-card.active { box-shadow:0 0 0 4rpx rgba(46,184,115,.4),0 12rpx 24rpx rgba(0,0,0,.28); background:rgba(18,23,29,.9) }

.stats-title {
  font-size: 30rpx;
  color: #cdd6dd;
  font-weight: 600;
  text-align: center;
}
.stats-items {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 12rpx;
}
.stat {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 12rpx 14rpx;
  background: rgba(255,255,255,.04);
  border-radius: 12rpx;
  border: 2rpx solid #1c232b;
}
.stat-label {
  font-size: 28rpx;
  color: #9aa5af;
}
.stat-num { font-size:32rpx; font-weight:800; color:#eaeef2 }
.stat-num.primary { color:#2eb873 }
.stat-num.emerald { color:#10b981 }
.stat-num.amber { color:#f59e0b }
.stat-num.destructive { color:#ef4444 }

.timer { text-align:center; padding: 12rpx 32rpx }
.timer-btn { display:inline-flex; align-items:center; gap:12rpx; padding: 12rpx 20rpx; border-radius:999rpx; background: rgba(18,23,29,.6); border: 2rpx solid rgba(255,255,255,.08) }
.timer-text { font-size:40rpx; font-weight:800; color:#eaeef2 }
.timer-text.danger { color:#ef4444 }
.timer-state { font-size:24rpx; padding: 6rpx 12rpx; border-radius:999rpx }
.timer-state.primary { background: rgba(46,184,115,.2); color:#2eb873 }
.timer-state.danger { background: rgba(239,68,68,.2); color:#ef4444 }

.mode-bar { display:flex; justify-content:flex-end; padding: 8rpx 32rpx 0 }
.mode-chip { display:inline-flex; align-items:center; padding: 10rpx 20rpx; border-radius:999rpx; font-size:28rpx; font-weight:800; color:#fff; background: linear-gradient(90deg, #2eb873, #239a60); border: 2rpx solid rgba(255,255,255,.08); box-shadow: 0 10rpx 16rpx rgba(46,184,115,.28), 0 0 0 4rpx rgba(46,184,115,.18) inset; letter-spacing: 2rpx }



.rename-mask {
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.55);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}
.rename-dialog {
  width: 560rpx;
  background: #12171d;
  border-radius: 16rpx;
  padding: 24rpx;
  border: 2rpx solid #1c232b;
}
.rename-title {
  font-size: 32rpx;
  color: #eaeef2;
  font-weight: 600;
  text-align: center;
  display: block;
}
.rename-input {
  height: 80rpx;
  border: 2rpx solid #1c232b;
  background: #141a21;
  color: #eaeef2;
  border-radius: 12rpx;
  padding: 0 16rpx;
  font-size: 32rpx;
  margin: 48rpx 0;
}
.rename-actions {
  display: flex;
  gap: 16rpx;
  margin-top: 16rpx;
}
.rename-btn {
  flex: 1;
  height: 80rpx;
  border-radius: 12rpx;
}
.rename-btn.cancel {
  background: #fff;
  border: 2rpx solid #1c232b;
  color: #1c232b;
}
