.topbar { display: flex; align-items: center; gap: 16rpx; padding: 24rpx 32rpx; border-bottom: 2rpx solid #1c232b; background: #141a21; }
.rounds { font-size: 30rpx; font-weight: 600; color: #cdd6dd; }
.mode { display: flex; gap: 12rpx;}
.seg{ background:#141a21; border:2rpx solid #1c232b; color:#cdd6dd; }
.seg.active { border: 2rpx solid #2eb873; color: #2eb873; }
.lastop { font-size: 28rpx; color: #9aa5af; padding: 16rpx 32rpx; }

.players { display: grid; gap: 16rpx; padding: 16rpx 32rpx; }
.players.two { grid-template-columns: repeat(2, 1fr); }
.players.three { grid-template-columns: repeat(3, 1fr); }
.player { display: flex; flex-direction: column; align-items: center; gap: 16rpx; padding: 20rpx; border-radius: 20rpx; background: #12171d; border: 2rpx solid #1c232b; box-shadow: 0 6rpx 16rpx rgba(0,0,0,.28); }
.player.selected { border: 2rpx solid #2eb873; box-shadow: 0 8rpx 20rpx rgba(46,184,115,.25); }
.name { font-size: 30rpx; color: #cdd6dd; }
.score-num { font-size: 92rpx; font-weight: 800; color: #eaeef2; text-shadow: 0 2rpx 4rpx rgba(0,0,0,.35); }

.ops { display: flex; gap: 12rpx; padding: 0 32rpx; margin-top: 8rpx; }

.tip {
  padding: 0 32rpx;
  text-align: center;
  color: #9aa5af;
  font-size: 28rpx;
}
.stats { display: grid; gap: 16rpx; padding: 16rpx 32rpx; }
.stats.two { grid-template-columns: repeat(2, 1fr); }
.stats.three { grid-template-columns: repeat(3, 1fr); }
.stats-card { display: flex; flex-direction: column; gap: 16rpx; padding: 24rpx; background: #12171d; border: 2rpx solid #1c232b; border-radius: 16rpx; box-shadow: 0 6rpx 14rpx rgba(0,0,0,.28); }
.stats-title { font-size: 26rpx; color: #cdd6dd; font-weight: 600; text-align: center; }
.stats-items { display: grid; gap: 16rpx; }
.stats-items.two { grid-template-columns: 1fr 1fr; }
.stats-items.three { grid-template-columns: 1fr; }
.stat { display: flex; align-items: center; justify-content: space-between; padding: 10rpx 12rpx; background: #141a21; border-radius: 12rpx; border: 2rpx solid #1c232b; }
.stat-label { font-size: 24rpx; color: #9aa5af; text-align: center;}

.bottombar { margin-top: auto; padding: 24rpx 32rpx 32rpx; background: #141a21; border-top: 2rpx solid #1c232b; }

.settings-mask, .loser-mask, .rename-mask { position: fixed; left: 0; top: 0; right: 0; bottom: 0; background: rgba(0,0,0,0.55); display: flex; align-items: center; justify-content: center; z-index: 1000; }
.settings-dialog, .loser-dialog, .rename-dialog { width: 640rpx; background: #12171d; border-radius: 16rpx; padding: 24rpx; border: 2rpx solid #1c232b; }
.rename-input {
  height: 80rpx;
  border: 2rpx solid #1c232b;
  border-radius: 12rpx;
  padding: 0 16rpx;
  font-size: 28rpx;
  margin: 48rpx 0;
  background: #141a21;
  color: #eaeef2;
}
.rename-title {
  font-size: 28rpx;
  color: #eaeef2;
  font-weight: 600;
  display: block;
}

.settings-title, .rename-title { font-size: 28rpx; color: #eaeef2; font-weight: 600; margin-bottom: 16rpx; text-align: center; }
.form-row { display: flex; align-items: center; justify-content: space-between; margin-bottom: 12rpx; }
.form-row text { color: #fff;}
.num-input { height: 80rpx; border: 2rpx solid #1c232b; border-radius: 12rpx; padding: 0 16rpx; font-size: 28rpx; width: 240rpx; text-align: right; background:#141a21; color:#eaeef2 }
.settings-actions, .rename-actions { display: flex; gap: 16rpx; margin-top: 16rpx; }
.loser-items { display: grid; grid-template-columns: 1fr 1fr; gap: 16rpx; justify-items: center; align-items: center; padding: 80rpx 0;}
.loser-item { width: 160rpx; height: 160rpx; display: flex; align-items: center; justify-content: center; border: 2rpx solid #1c232b; border-radius: 50%; background:#fe6e00; }
.loser-item .name { color: #fff;}
.loser-item.active { border-color: #2eb873; box-shadow: 0 8rpx 16rpx rgba(46,184,115,.22); }

.counts-row { display: grid; grid-template-columns: repeat(5, 1fr); gap: 8rpx; margin: 12rpx 0 6rpx; }
.labels-row { display: grid; grid-template-columns: repeat(5, 1fr); gap: 8rpx; }
.labels-row .stat-label { text-align: center; }

/* Align with eight-ball styles */
.players-scores { display:flex; align-items:center; justify-content:center; gap:24rpx; padding: 24rpx 32rpx }
.select-card { flex:1; padding:24rpx; border-radius:32rpx; position:relative; overflow:hidden; background:rgba(18,23,29,.6); border:2rpx solid rgba(255,255,255,.1); box-shadow:0 12rpx 24rpx rgba(0,0,0,.28) }
.select-card.selected { box-shadow:0 0 0 4rpx rgba(46,184,115,.5),0 12rpx 24rpx rgba(0,0,0,.28); background:rgba(18,23,29,.92) }
.player-name { text-align:center; font-size:28rpx; color:#9aa5af; font-weight:700; margin-bottom:12rpx }
.score-x { text-align:center; font-size:96rpx; font-weight:900; color:#eaeef2 }
.round-pill-container { display:flex; align-items:center; flex-direction:column; gap:12rpx; justify-content:center }
.round-pill { font-size:28rpx; color:#eaeef2; font-weight:800; padding: 8rpx 16rpx; border-radius:999rpx; background: rgba(255,255,255,.06); border: 2rpx solid rgba(255,255,255,.08) }
.vs { font-style: italic; font-size: 32rpx; color: #9aa5af; padding: 8rpx 16rpx; border-radius: 32rpx; background: rgba(255,255,255,.06) }

.ops-grid { display:flex; flex-wrap:nowrap; gap: 24rpx; align-items: center; padding: 32rpx 24rpx }
.op { color: #fff; flex:1; display: flex; align-items: center; justify-content: center; height:88rpx; border-radius:24rpx; font-size:28rpx; font-weight:800; box-sizing:border-box }
.btn-primary { background: linear-gradient(180deg, #2eb873, #239a60); color:#fff; box-shadow: 0 10rpx 16rpx rgba(46,184,115,.28) }
.btn-amber { background: linear-gradient(180deg, #f59e0b, #f97316); color:#fff; box-shadow: 0 10rpx 16rpx rgba(245,158,11,.28) }
.btn-danger { border:2rpx solid rgba(239,68,68,.5); background: rgba(239,68,68,.12); color:#ef4444 }

.actions { display:flex; flex-wrap:nowrap; align-items: center; justify-content: space-around; gap: 20rpx; padding: 0 32rpx;}
.action { flex:1; border:2rpx solid #1c232b; border-radius: 20rpx; background: #000; color:#cdd6dd; display:flex; align-items:center; justify-content:center; gap:16rpx; box-sizing:border-box; padding: 16rpx 0; }
.action.danger { border-color:#ef4444; color:#ef4444 }

.timer { text-align:center; padding: 12rpx 32rpx }
.timer-btn { display:inline-flex; align-items:center; gap:12rpx; padding: 12rpx 20rpx; border-radius:999rpx; background: rgba(18,23,29,.6); border: 2rpx solid rgba(255,255,255,.08) }
.timer-text { font-size:40rpx; font-weight:800; color:#eaeef2 }
.timer-text.danger { color:#ef4444 }
.timer-state { font-size:24rpx; padding: 6rpx 12rpx; border-radius:999rpx }
.timer-state.primary { background: rgba(46,184,115,.2); color:#2eb873 }
.timer-state.danger { background: rgba(239,68,68,.2); color:#ef4444 }

.mode-bar { display:flex; justify-content: space-between; padding: 32rpx 32rpx }
.mode-chip { display:inline-flex; align-items:center; padding: 10rpx 20rpx; border-radius:999rpx; font-size:28rpx; font-weight:800; color:#fff; background: linear-gradient(90deg, #2eb873, #239a60); border: 2rpx solid rgba(255,255,255,.08); box-shadow: 0 10rpx 16rpx rgba(46,184,115,.28), 0 0 0 4rpx rgba(46,184,115,.18) inset; letter-spacing: 2rpx }

.stat-num { font-size:32rpx; font-weight:800; color:#eaeef2; text-align: center; }
.stat-num.primary { color:#2eb873 }
.stat-num.amber { color:#f59e0b }
.stat-num.destructive { color:#ef4444 }
