page {
  --bg: #0E1620;
  --bg-end: #0B121A;
  --card: #1C2430;
  --card-border: rgba(255, 255, 255, 0.1);
  --text: #ffffff;
  --text-muted: #94a3b8;
  --primary: #2DD47E;
  --danger: #FF4D5E;
  --warning: #FF9F43;
  --amber: #FFB547;
  --yellow: #FFC107;
  --shadow: 0 4px 20px rgba(0,0,0,0.3);
  --radius: 32rpx;

  background: linear-gradient(135deg, var(--bg) 0%, var(--bg-end) 100%);
  color: var(--text);
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
  min-height: 100vh;
  box-sizing: border-box;
}

.container {
  padding: 24rpx 32rpx;
  display: flex;
  flex-direction: column;
  gap: 32rpx;
  min-height: 100vh;
  box-sizing: border-box;
}

/* Top Bar */
.top-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.pill {
  padding: 12rpx 24rpx;
  border-radius: 999rpx;
  font-size: 26rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.pill.default {
  background: #1E2631;
  color: #EAF2FF;
  border: 1px solid rgba(255, 255, 255, 0.1);
}

.pill.primary {
  background: rgba(45, 212, 126, 0.15);
  color: var(--primary);
  border: 1px solid rgba(45, 212, 126, 0.3);
  box-shadow: 0 0 12rpx rgba(45, 212, 126, 0.2);
}

/* Timer */
.timer-container {
  display: flex;
  justify-content: center;
  margin-top: -16rpx;
}

.timer {
  background: #0F141B;
  border: 1px solid rgba(255, 255, 255, 0.1);
  padding: 12rpx 32rpx;
  border-radius: 999rpx;
  display: flex;
  align-items: center;
  gap: 20rpx;
  box-shadow: var(--shadow);
}

.timer-text {
  font-size: 44rpx;
  font-weight: 700;
  font-family: monospace;
  color: #fff;
  letter-spacing: 2rpx;
}

.timer-status {
  font-size: 22rpx;
  padding: 4rpx 16rpx;
  border-radius: 999rpx;
  background: var(--primary);
  color: #000;
  font-weight: 700;
}
.timer-status.paused {
  background: var(--danger);
  color: #fff;
}

/* Main Panel (Card Container) */
.main-panel {
  background: var(--card);
  border: 1px solid var(--card-border);
  border-radius: var(--radius);
  padding: 20rpx;
  box-shadow: var(--shadow);
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

/* Score Grid */
.score-grid {
  display: grid;
  gap: 24rpx;
  align-items: stretch;
}
.score-grid.two-players {
  grid-template-columns: 1fr 1fr;
}
.score-grid.three-players {
  grid-template-columns: 1fr 1fr 1fr;
}

.player-card {
  background: #111827; /* Darker inner card */
  border: 1px solid var(--card-border);
  border-radius: 24rpx;
  padding: 32rpx 16rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
  transition: all 0.3s ease;
}

.player-card.active {
  border-color: var(--primary);
  box-shadow: 0 0 0 2rpx rgba(45, 212, 126, 0.3);
}

.player-name {
  font-size: 28rpx;
  color: var(--text-muted);
  margin-bottom: 16rpx;
  font-weight: 600;
}

.player-score {
  font-size: 80rpx;
  font-weight: 800;
  color: #fff;
  line-height: 1;
  text-shadow: 0 2rpx 8rpx rgba(0,0,0,0.3);
}

.hint-text {
  text-align: center;
  color: var(--text-muted);
  font-size: 24rpx;
  opacity: 0.6;
}

/* Stats Grid */
.stats-grid {
  display: grid;
  gap: 16rpx;
  padding-top: 24rpx;
  border-top: 1px solid rgba(255,255,255,0.05);
}
.stats-grid.two-players {
  grid-template-columns: 1fr 1fr;
}
.stats-grid.three-players {
  grid-template-columns: 1fr 1fr 1fr;
}

.stat-column {
  /* No background for column, just layout */
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.stat-header {
  text-align: center;
  color: var(--text-muted);
  font-size: 24rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.stat-items-row {
  height: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: 8rpx;
}

.stats-grid.three-players .stat-items-row {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 8rpx;
}

.stats-grid.three-players .stat-item:last-child {
  grid-column: span 2;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
  background: #111827;
  border-radius: 12rpx;
  padding: 12rpx 4rpx;
  border: 1px solid var(--card-border);
}

.stat-val {
  font-size: 28rpx;
  font-weight: 700;
  margin-bottom: 4rpx;
}

.stat-label {
  font-size: 20rpx;
  color: var(--text-muted);
}

/* Colors */
.text-danger { color: var(--danger); }
.text-primary { color: var(--primary); }
.text-warning { color: var(--warning); }
.text-amber { color: var(--amber); }
.text-yellow { color: var(--yellow); }

/* Action Buttons */
.action-grid {
  display: grid;
  grid-template-columns: repeat(5, 1fr);
  gap: 16rpx;
  margin-top: 16rpx;
}

.btn-score {
  height: 96rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: 700;
  color: #fff;
  transition: opacity 0.2s;
  box-shadow: var(--shadow);
}
.btn-score:active { opacity: 0.8; transform: scale(0.98); }
.btn-score[disabled] { opacity: 0.5; filter: grayscale(1); }

.bg-danger { background: var(--danger); box-shadow: 0 4rpx 12rpx rgba(255, 77, 94, 0.3); }
.bg-primary { background: var(--primary); box-shadow: 0 4rpx 12rpx rgba(45, 212, 126, 0.3); }
.bg-warning { background: var(--warning); box-shadow: 0 4rpx 12rpx rgba(255, 159, 67, 0.3); }
.bg-amber { background: var(--amber); box-shadow: 0 4rpx 12rpx rgba(255, 181, 71, 0.3); }
.bg-yellow { background: var(--yellow); box-shadow: 0 4rpx 12rpx rgba(255, 193, 7, 0.3); }

/* Footer */
.footer {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 16rpx;
  margin-top: auto;
  padding-bottom: env(safe-area-inset-bottom);
}

.btn-control {
  background: var(--card);
  border: 1px solid var(--card-border);
  height: 88rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  color: var(--text-muted);
  font-size: 26rpx;
  font-weight: 600;
  transition: all 0.2s;
}
.btn-control:active { background: #111827; }

.btn-control.danger {
  color: var(--danger);
  border-color: rgba(255, 77, 94, 0.3);
  background: rgba(255, 77, 94, 0.1);
}

/* Modals */
.modal-mask {
  position: fixed; top:0; left:0; right:0; bottom:0;
  background: rgba(0,0,0,0.7);
  backdrop-filter: blur(4px);
  display: flex; align-items: center; justify-content: center;
  z-index: 1000;
}
.modal-content {
  background: var(--card);
  border: 1px solid var(--card-border);
  border-radius: 24rpx;
  width: 600rpx;
  padding: 40rpx;
  box-shadow: var(--shadow);
}
.modal-title {
  text-align: center;
  font-size: 32rpx;
  font-weight: 700;
  margin-bottom: 40rpx;
  color: #fff;
}
.modal-body {
  margin-bottom: 40rpx;
}
.modal-footer {
  display: flex;
  gap: 24rpx;
}

.form-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}
.form-label { font-size: 28rpx; color: var(--text-muted); }

.input-field {
  background: #111827;
  border: 1px solid var(--card-border);
  height: 80rpx;
  border-radius: 12rpx;
  padding: 0 24rpx;
  color: #fff;
  font-size: 28rpx;
  text-align: right;
  width: 200rpx;
}
.input-field.full { width: 100%; text-align: left; }

.btn-modal {
  flex: 1;
  height: 88rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: 600;
}
.btn-modal.cancel { background: transparent; border: 1px solid var(--card-border); color: var(--text-muted); }
.btn-modal.confirm { background: var(--primary); color: #000; border: none; }

.loser-grid {
  display: flex;
  justify-content: center;
  gap: 32rpx;
  padding: 24rpx 0;
}
.loser-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background: #111827;
  border: 2rpx solid var(--card-border);
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-weight: 600;
}
.loser-avatar.selected {
  border-color: var(--primary);
  background: rgba(45, 212, 126, 0.1);
  color: var(--primary);
}
