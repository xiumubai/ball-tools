
/* Header */
.header {
  margin-bottom: 48rpx;
}

.h1 {
  font-size: 48rpx;
  font-weight: 700;
  margin-bottom: 8rpx;
}

.p {
  color: var(--text-secondary);
  font-size: 28rpx;
}

/* Cards */
.card {
  background: var(--bg-card);
  border: 2rpx solid var(--border-color);
  border-radius: var(--radius-lg);
  padding: 40rpx;
  margin-bottom: 32rpx;
  position: relative;
  overflow: hidden;
  display: flex;
  justify-content: space-between;
  align-items: center;
  transition: all 0.2s;
}

.card:active {
  border-color: var(--accent-green);
  transform: translateY(-4rpx);
}

.card-content {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  flex: 1;
}

.card-header {
  display: flex;
  align-items: center;
  gap: 24rpx;
  margin-bottom: 8rpx;
}

.icon-box {
  width: 48rpx;
  height: 48rpx;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.icon-box.green {
  background: rgba(16, 185, 129, 0.1);
  color: var(--accent-green);
}

.icon-box.orange {
  background: rgba(245, 158, 11, 0.1);
  color: var(--accent-orange);
}

.card-title {
  font-size: 32rpx;
  font-weight: 700;
  color: var(--text-primary);
}

.card-desc {
  font-size: 24rpx;
  color: var(--text-secondary);
}

.arrow-btn {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.05);
  display: flex;
  align-items: center;
  justify-content: center;
  color: var(--text-secondary);
  transition: all 0.2s;
  z-index: 2;
}

.card:active .arrow-btn {
  background: var(--accent-green);
  color: white;
}

/* Grid Layout for small cards */
.grid-2 {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 32rpx;
  margin-bottom: 48rpx;
}

.small-card {
  background: var(--bg-card);
  border: 2rpx solid var(--border-color);
  border-radius: var(--radius-lg);
  padding: 32rpx;
  position: relative;
  overflow: hidden;
  transition: all 0.2s;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.small-card:active {
  border-color: var(--accent-orange);
  transform: translateY(-4rpx);
}

.small-card-header {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 16rpx;
}

.small-card-title {
  font-size: 28rpx;
  font-weight: 700;
  color: var(--text-primary);
}

.small-card-desc {
  font-size: 24rpx;
  color: var(--text-secondary);
}

.highlight-circle {
  position: absolute;
  top: -40rpx;
  right: -40rpx;
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  background: radial-gradient(circle, rgba(245, 158, 11, 0.1) 0%, transparent 70%);
  pointer-events: none;
}

.highlight-circle.green {
  background: radial-gradient(circle, rgba(16, 185, 129, 0.1) 0%, transparent 70%);
}

/* Section Label */
.section-label {
  font-size: 28rpx;
  color: var(--text-secondary);
  margin-bottom: 24rpx;
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background: var(--accent-green);
  box-shadow: 0 0 0 0 rgba(16, 185, 129, 0.7);
  animation: pulse 2s infinite;
}

@keyframes pulse {
  0% {
    transform: scale(0.95);
    box-shadow: 0 0 0 0 rgba(16, 185, 129, 0.7);
  }
  
  70% {
    transform: scale(1);
    box-shadow: 0 0 0 10px rgba(16, 185, 129, 0);
  }
  
  100% {
    transform: scale(0.95);
    box-shadow: 0 0 0 0 rgba(16, 185, 129, 0);
  }
}

/* Empty State */
.empty-state {
  background: var(--bg-card);
  border: 2rpx solid var(--border-color);
  border-radius: var(--radius-lg);
  padding: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  color: var(--text-muted);
  font-size: 28rpx;
}

/* Ongoing List Styles */
.ongo-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.ongo-actions {
  display: flex;
  align-items: center;
  gap: 24rpx;
  margin-left: 24rpx;
}

.btn-continue {
  padding: 12rpx 32rpx;
  background: var(--accent-green);
  border-radius: 32rpx;
  font-size: 26rpx;
  font-weight: 600;
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn-del {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  background: rgba(239, 68, 68, 0.1);
  display: flex;
  align-items: center;
  justify-content: center;
  color: var(--accent-red);
}
