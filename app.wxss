page {
  --text-white: #FFFFFF;
  --text-gray: #9AA7B3;
  --text-light-gray: #B6C0CC;
  --text-primary: #f8fafc;
  --text-secondary: #94a3b8;
  --text-muted: #64748b;

  --bg-primary: #0a0f1a;
  --bg-secondary: #111827;
  --bg-card: rgba(30, 41, 59, 0.7);
  --card-bg: #0E1A24;
  --bg-input: #0d1320;
  --bg-gradient-start: #0B1520;
  --bg-gradient-end: #0E1A24;
  --border-color: rgba(71, 85, 105, 0.5);
  --card: #1a2332;
  --card-2: #111827;
  --border: #2a3a50;
  --bg: #0a0f1a;
  --chip: #1a2332;
  --chip-border: #2a3a50;
  --accent-blue: #3b82f6;
  --accent-blue-hover: #2563eb;
  --accent-green: #10b981;
  --accent-green-start: #1CC88A;
  --accent-green-end: #5CE1B9;
  --accent-amber: #f59e0b;
  --accent-red: #ef4444;
  --accent-purple: #8b5cf6;
  --accent-orange: #f59e0b;
  --accent-orange-start: #FF9A3D;
  --accent-orange-end: #FFB35C;
  --accent-deep-orange: #F9812A;
  --accent-yellow: #eab308;
  --badge-green-start: #0DBA74;
  --badge-green-end: #33D69F;

  --radius-sm: 16rpx;
  --radius-md: 24rpx;
  --radius-lg: 32rpx;
  --radius-card: 32rpx;
  --radius-tile: 24rpx;
  --shadow-card: 0 8rpx 48rpx rgba(0, 0, 0, 0.3);
  --transition: all 0.2s ease;
  --radius-full: 9999rpx;

  background: linear-gradient(160deg, var(--bg-primary) 0%, var(--bg-secondary) 50%, var(--bg-primary) 100%);
  min-height: 100vh;
  color: var(--text-primary);
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
  box-sizing: border-box;
}
.container { padding: 48rpx 0 200rpx 0;}
.cn-padding { padding-left: 32rpx; padding-right: 32rpx;}
.text-foreground{color:#eaeef2}
.bg-card{background:#12171d}
.text-card-foreground{color:#eaeef2}
.bg-popover{background:#12171d}
.text-popover-foreground{color:#eaeef2}
.bg-primary{background:#2eb873}
.text-primary{color:#2eb873}
.text-primary-foreground{color:#fff}
.bg-secondary{background:#141a21}
.text-secondary-foreground{color:#eaeef2}
.text-muted-foreground{color:#9aa5af}
.bg-accent{background:#f5c73d}
.text-accent-foreground{color:#0f141a}
.bg-destructive{background:#ef4444}
.text-destructive{color:#ef4444}
.text-destructive-foreground{color:#fff}
.border-border{border-color:#1c232b}
.ring-primary{box-shadow:0 0 0 4rpx rgba(46,184,115,.5)}
.glass{background:rgba(18,23,29,.6);backdrop-filter:blur(12rpx);border:2rpx solid rgba(255,255,255,.1);box-shadow:0 12rpx 24rpx rgba(0,0,0,.28)}
@keyframes scorePop{0%{transform:scale(1)}50%{transform:scale(1.2)}100%{transform:scale(1)}}
.animate-score{animation:scorePop .3s cubic-bezier(0.175,0.885,0.32,1.275)}
